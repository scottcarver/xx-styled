{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "xx/styled",
	"version": "0.1.1",
	"title": "Styled Area",
	"category": "design",
	"icon": "art",
	"description": "A boundary area for theming Foreground, Background, Typography & Dimensions.",
	"supports": {
		"align": ["wide", "full"],
		"anchor": true,
		"className": false,
		"customClassName": true,
		"html": true
	},
	"attributes" : {
		"clientUUID": {
			"type": "string"
		},
		"align": {
			"type": "string",
			"comment" : "needed for fullwidth control"
		},
		"namedStyle": {
			"type": "string",
			"comment" : "slug that matches url-name"
		},
		"styleMode": {
			"type": "string",
			"default": "custom"
		},
		"headlineColor": {
			"type": "string"
		},
		"foregroundColor": {
			"type": "string"
		},
		"linkColor": {
			"type": "string"
		},
		"blockquoteColor": {
			"type": "string"
		},
		"captionColor": {
			"type": "string"
		},
		"dropcapColor": {
			"type": "string"
		},
		"lineartColor": {
			"type": "string"
		},
		"keyGradient": {
			"type": "string"
		},
		"selectionFGColor": {
			"type": "string"
		},
		"selectionBGColor": {
			"type": "string"
		},
		"interfaceFGColor": {
			"type": "string"
		},
		"interfaceBGColor": {
			"type": "string"
		},
		"interfaceKeyColor": {
			"type": "string"
		},
		"bgColorEnabled": {
			"type": "boolean",
			"default": true
		},
		"bgGradientEnabled": {
			"type": "boolean",
			"default": false
		},
		"bgImageEnabled": {
			"type": "boolean",
			"default": false
		},
		"bgGelEnabled": {
			"type": "boolean",
			"default": false
		},
		"bgStackFirst": {
			"type": "string",
			"default": "image"
		},
		"backgroundGel": {
			"type": "string",
			"comment":"used as the gel color"
		},
		"backgroundColor": {
			"type": "string",
			"comment":"used as the base color in the generated style"
		},
		"bgGrad1": {
			"type": "string",
			"comment":"used as gradient color 1"
		},
		"bgGrad2": {
			"type": "string",
			"comment":"used as gradient color 2"
		},
		"bgGrad1Start": {
			"type": "number",
			"default": 0
		},
		"bgGrad2Start": {
			"type": "number",
			"default": 100
		},
		"gradientType": {
			"type": "string",
			"default": "linear"
		},
		"gradientLinearAngle": {
			"type": "number",
			"default": 45
		},
		"gradientAlignRadialHori": {
			"type": "number",
			"default": 50
		},
		"gradientAlignRadialVert": {
			"type": "number",
			"default": 50
		},
		"backgroundImage": {
			"type": "string",
			"default": ""
		},
		"focalPoint": {
			"type": "object",
			"default": { "x": 0.5, "y": 0.1 }
		},
		"bgImageSizeDefault": {
			"type": "string",
			"default": "cover"
		},
		"bgImageSizeSm": {
			"type": "string",
			"default": "100%"
		},
		"bgImageSizeMd": {
			"type": "string",
			"default": "100%"
		},
		"bgImageSize": {
			"type": "string",
			"default": "100%"
		},
		"bgImageRepeat": {
			"type": "string",
			"default": "no-repeat"
		},
		"bgImageAttachment": {
			"type": "string",
			"default": "scroll"
		},
		"bgGradientAttachment": {
			"type": "string",
			"default": "scroll"
		},
		"spacingMobile": {
			"type": "object",
			"default": ""
		},
		"spacingTablet": {
			"type": "object",
			"default": ""
		},
		"spacingDesktop": {
			"type": "object",
			"default": ""
		},
		"fgHeadlineFont": {
			"type": "string",
			"default": ""
		},
		"fgCopyFont": {
			"type": "string",
			"default": ""
		},
		"fgCaptionFont": {
			"type": "string",
			"default": ""
		}
	},
	"example": {
        "attributes": {
            "message": "This is a notice!"
        }
    },
    "variations": [
        {
            "name": "light",
            "title": "Light Styled",
            "attributes": {
                "backgroundColor": "#fff",
				"foregroundColor": "#000",
				"spacingMobile":{"top":"30px","right":"30px","bottom":"30px","left":"30px"},
				"spacingTablet":{"top":"30px","right":"30px","bottom":"30px","left":"30px"},
				"spacingDesktop":{"top":"50px","right":"50px","bottom":"50px","left":"50px"}
            },
			"innerBlocks": [
				["core/heading", { "level": 3, "content": "To get started with this Styled Area, edit the sidebar, and delete the placeholder text" }],
				["core/paragraph", { "content": "Vivamus suscipit tortor eget felis porttitor volutpat. Cras ultricies ligula sed magna dictum porta. Cras ultricies ligula sed magna dictum porta. Vivamus suscipit tortor eget felis porttitor volutpat. Quisque velit nisi, pretium ut lacinia in, elementum id enim. Vivamus suscipit tortor eget felis porttitor volutpat." }]
			]
        },
		{
            "name": "dark",
            "title": "Dark Styled",
            "attributes": {
                "backgroundColor": "#222",
				"foregroundColor": "#fff",
				"spacingMobile":{"top":"30px","right":"30px","bottom":"30px","left":"30px"},
				"spacingTablet":{"top":"30px","right":"30px","bottom":"30px","left":"30px"},
				"spacingDesktop":{"top":"50px","right":"50px","bottom":"50px","left":"50px"}
            },
			"innerBlocks": [
				["core/heading", { "level": 3, "content": "To get started with this Styled Area, edit the sidebar, and delete the placeholder text" }],
				["core/paragraph", { "content": "Vivamus suscipit tortor eget felis porttitor volutpat. Cras ultricies ligula sed magna dictum porta. Cras ultricies ligula sed magna dictum porta. Vivamus suscipit tortor eget felis porttitor volutpat. Quisque velit nisi, pretium ut lacinia in, elementum id enim. Vivamus suscipit tortor eget felis porttitor volutpat." }]
			]
        }
    ],
	"textdomain": "xx-styled",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}