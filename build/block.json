{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "xx/styled",
	"version": "0.1.0",
	"title": "Styled Area",
	"category": "design",
	"icon": "art",
	"description": "A complete portable thematic set of FG/BG styles.",
	"supports": {
		"align": ["wide", "full"],
		"anchor": true,
		"className": false,
		"customClassName": true,
		"html": true
	},
	"attributes" : {
		
		"align": {
			"type": "string",
			"comment" : "needed for fullwidth control"
		},
		"blockAlignment": {
			"type": "string"
		},
		"blockID": {
			"type": "string",
			"comment" : "used for unique naming"
		},
		"namedStyle": {
			"type": "string",
			"comment" : "slug that matches url-name"
		},
		"styleMode": {
			"type": "string",
			"default": "custom"
		},


	



		"headlineColor": {
			"type": "string"
		},
		"foregroundColor": {
			"type": "string"
		},
		"linkColor": {
			"type": "string"
		},
		"dropcapColor": {
			"type": "string"
		},
		"blockquoteColor": {
			"type": "string"
		},
		"lineartColor": {
			"type": "string"
		},
		"keyGradient": {
			"type": "string"
		},
		"selectionFGColor": {
			"type": "string"
		},
		"selectionBGColor": {
			"type": "string"
		},






		
		"interfaceFGColor": {
			"type": "string"
		},
		"interfaceBGColor": {
			"type": "string"
		},
		"interfaceKeyColor": {
			"type": "string"
		},


		"bgColorEnabled": {
			"type": "boolean",
			"default": true
		},
		"bgGradientEnabled": {
			"type": "boolean",
			"default": false
		},
		"bgImageEnabled": {
			"type": "boolean",
			"default": false
		},
		"bgGelEnabled": {
			"type": "boolean",
			"default": false
		},
		"bgColorCount": {
			"type": "string",
			"default": "flat"
		},
		"bgStackFirst": {
			"type": "string",
			"default": "image"
		},
		"backgroundColor": {
			"type": "string",
			"comment":"used as the base color in the generated style"
		},
		"backgroundGel": {
			"type": "string",
			"comment":"used as the gel color"
		},
		"bgGrad1": {
			"type": "string",
			"comment":"used as gradient color 1"
		},
		"bgGrad2": {
			"type": "string",
			"comment":"used as gradient color 2"
		},
		"bgGrad1Start": {
			"type": "number",
			"default": 0
		},
		"bgGrad2Start": {
			"type": "number",
			"default": 100
		},
		"gradientType": {
			"type": "string",
			"default": "linear"
		},
		"gradientLinearAngle": {
			"type": "number",
			"default": 45
		},
		"gradientAlignRadialHori": {
			"type": "number",
			"default": 50
		},
		"gradientAlignRadialVert": {
			"type": "number",
			"default": 50
		},


		"backgroundImage": {
			"type": "string",
			"default": ""
		},
		"focalPoint": {
			"type": "object",
			"default": { "x": 0.5, "y": 0.1 }
		},
		"bgImageSizeDefault": {
			"type": "string",
			"default": "cover"
		},
		"bgImageSizeSm": {
			"type": "string",
			"default": "100%"
		},
		"bgImageSizeMd": {
			"type": "string",
			"default": "100%"
		},
		"bgImageSize": {
			"type": "string",
			"default": "100%"
		},
		"bgImageRepeat": {
			"type": "string",
			"default": "no-repeat"
		},
		"bgImageAttachment": {
			"type": "string",
			"default": "scroll"
		},
		"bgGradientAttachment": {
			"type": "string",
			"default": "scroll"
		},
	



		"spacingMobile": {
			"type": "object",
			"default": ""
		},
		"spacingTablet": {
			"type": "object",
			"default": ""
		},
		"spacingDesktop": {
			"type": "object",
			"default": ""
		},



		"fgHeadlineFont": {
			"type": "string",
			"default": "inherit"
		},
		"fgCopyFont": {
			"type": "string",
			"default": "inherit"
		},
		"fgCaptionFont": {
			"type": "string",
			"default": "inherit"
		}
	},
	"textdomain": "xx-styled",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}